# Environment Variables Template
# Copy this to .env file and set your actual values
# DO NOT commit .env to version control!

# Application Profile (dev/prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (REQUIRED)
DATABASE_URL=jdbc:postgresql://localhost:5432/myhive_db
DB_USERNAME=myhive_user
DB_PASSWORD=your_secure_database_password_here

# CORS Configuration
# Development: http://localhost:3000,http://127.0.0.1:3000
# Production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google Sheets Configuration (REQUIRED for booking system)
# Option 1: Environment variable (preferred - no file needed)
GOOGLE_SHEETS_CREDENTIALS_JSON=your_base64_encoded_service_account_key_here
GOOGLE_SHEETS_SPREADSHEET_ID=your_actual_spreadsheet_id_here
GOOGLE_SHEETS_ENABLED=true

# Option 2: File-based (fallback for local development)
GOOGLE_SHEETS_CREDENTIALS_PATH=./service-account-key.json

# Email Configuration (Optional - for itinerary confirmations)
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:3000
